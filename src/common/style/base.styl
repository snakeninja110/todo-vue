html,
body
  margin: 0
  padding: 0

button
  margin: 0
  padding: 0
  border: 0
  background: none
  font-size: 100%
  vertical-align: baseline
  font-family: inherit
  font-weight: inherit
  color: inherit
  -webkit-appearance: none
  -webkit-font-smoothing: antialiased
  -moz-font-smoothing: antialiased
  font-smoothing: antialiased

body
  font: 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  line-height: 1.4em
  background: #f5f5f5
  color: #4d4d4d
  min-width: 230px
  max-width: 550px
  margin: 0 auto
  -webkit-font-smoothing: antialiased
  -moz-font-smoothing: antialiased
  font-smoothing: antialiased
  font-weight: 300

button,
input[type="checkbox"]
  outline: none

#app
  input
    &::-webkit-input-placeholder
      font-style: italic
      font-weight: 300
      color: #e6e6e6
    &::-moz-placeholder
      font-style: italic
      font-weight: 300
      color: #e6e6e6
    &::input-placeholder
      font-style: italic
      font-weight: 300
      color: #e6e6e6

.new-todo, .edit
  position: relative
  margin: 0
  width: 100%
  font-size: 24px
  font-family: inherit
  font-weight: inherit
  line-height: 1.4em
  border: 0
  outline: none
  color: inherit
  padding: 6px
  border: 1px solid #999
  box-shadow: inset 0 -1px 5px 0 rgba(0, 0, 0, 0.2)
  box-sizing: border-box
  -webkit-font-smoothing: antialiased
  -moz-font-smoothing: antialiased
  font-smoothing: antialiased

.hidden
  display: none
